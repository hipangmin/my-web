#!/usr/bin/env python3
# -*- coding: utf-8 -*-
"""
Fix Email V11 - Using HTML table for guaranteed alignment
"""

import os
import re

TARGET_DIR = r"d:\ypm\my web\test\cmcsclass.com"

# Match existing patterns (broader regex)
OLD_PATTERNS = [
    r'<span class="elementor-icon-list-text">\s*<span[^>]*>Email:</span>\s*<a[^>]*>technical@cmcsclass\.org</a><br>\s*<span[^>]*></span>\s*<a[^>]*>fleet@cmcsclass\.org</a></span>',
    r'<span class="elementor-icon-list-text"><span style="[^"]*">Email:</span><a[^>]*>technical@cmcsclass\.org</a><br><span style="[^"]*"></span><a[^>]*>fleet@cmcsclass\.org</a></span>',
]

# New email using table - guaranteed alignment
NEW_EMAIL = '''<span class="elementor-icon-list-text"><table style="border-collapse:collapse; margin:0; padding:0; border:none;"><tr><td style="vertical-align:top; padding:0 5px 0 0; border:none;">Email:</td><td style="padding:0; border:none; line-height:1.3;"><a href="mailto:technical@cmcsclass.org" style="color:inherit; text-decoration:none;">technical@cmcsclass.org</a><br><a href="mailto:fleet@cmcsclass.org" style="color:inherit; text-decoration:none;">fleet@cmcsclass.org</a></td></tr></table></span>'''

# CSS 
CSS_V11 = '''<style id="contact-us-spacing-final">
/* V11 - Table-based Email Alignment */
.elementor-element-1a327498 p,
.elementor-widget-text-editor p {
    margin-bottom: 10px !important;
    line-height: 1.4 !important;
}
.elementor-widget-icon-list .elementor-icon-list-items li.elementor-icon-list-item {
    margin-bottom: 10px !important;
}
.elementor-widget-icon-list .elementor-icon-list-items li.elementor-icon-list-item:last-child {
    margin-bottom: 0 !important;
}
.elementor-widget-icon-list .elementor-icon-list-text {
    line-height: 1.4 !important;
}
.elementor-element-1a327498 .elementor-widget-container {
    margin-bottom: 0 !important;
}
/* Table inside list item */
.elementor-icon-list-text table {
    display: inline-table;
    vertical-align: top;
}
</style>'''

def fix_file(filepath):
    try:
        with open(filepath, 'r', encoding='utf-8') as f:
            content = f.read()
    except:
        return False
    
    original = content
    
    for pattern in OLD_PATTERNS:
        content = re.sub(pattern, NEW_EMAIL, content, flags=re.DOTALL)
    
    old_css = r'<style id="contact-us-spacing-final">.*?</style>'
    if re.search(old_css, content, re.DOTALL):
        content = re.sub(old_css, CSS_V11, content, flags=re.DOTALL)
    
    if content != original:
        with open(filepath, 'w', encoding='utf-8') as f:
            f.write(content)
        return True
    return False

def main():
    print("=" * 60)
    print("EMAIL FIX V11 - Table-based Alignment")
    print("=" * 60)
    
    fixed = 0
    for root, dirs, files in os.walk(TARGET_DIR):
        dirs[:] = [d for d in dirs if d not in ['.git', 'node_modules', 'wp-json']]
        for file in files:
            if file.endswith('.html'):
                if fix_file(os.path.join(root, file)):
                    fixed += 1
                    print(f"  Fixed: {file}")
    
    print(f"\nUpdated {fixed} files")

if __name__ == "__main__":
    main()
