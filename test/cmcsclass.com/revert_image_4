#!/usr/bin/env python3
# -*- coding: utf-8 -*-
"""
Revert Image 4: Shutterstock Background
Restores the original image from the sibling directory backup.
Source: .../pangminybm.com/.../shutterstock_2312730785.webp
Target: .../cmcsclass.com/.../shutterstock_2312730785.webp
"""

import os
import shutil

# The backup source from the sibling site
BACKUP_SOURCE = r"d:\ypm\my web\test\pangminybm.com\wp-content\uploads\2025\07\shutterstock_2312730785.webp"

# The target we overwrote
TARGET_DEST = r"d:\ypm\my web\test\cmcsclass.com\wp-content\uploads\2025\07\shutterstock_2312730785.webp"

def revert_image():
    if not os.path.exists(BACKUP_SOURCE):
        print(f"Error: Backup source not found at {BACKUP_SOURCE}")
        return
    
    try:
        shutil.copy2(BACKUP_SOURCE, TARGET_DEST)
        print(f"Successfully REVERTED image from backup: {TARGET_DEST}")
    except Exception as e:
        print(f"Failed to revert: {e}")

if __name__ == "__main__":
    revert_image()
