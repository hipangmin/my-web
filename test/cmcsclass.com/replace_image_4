#!/usr/bin/env python3
# -*- coding: utf-8 -*-
"""
Replace Image 4: Shutterstock Replacement
Target: shutterstock_2312730785.webp
Source: shutterstock_replacement_....png (Convert to WEBP)
"""

import os
from PIL import Image

NEW_IMAGE_SOURCE = r"C:/Users/Administrator/.gemini/antigravity/brain/aef38e19-3bda-43f5-bb5c-03fd03adb4dd/shutterstock_replacement_1765355607953.png"
TARGET_IMAGE_PATH = r"d:\ypm\my web\test\cmcsclass.com\wp-content\uploads\2025\07\shutterstock_2312730785.webp"

def replace_image():
    if not os.path.exists(NEW_IMAGE_SOURCE):
        print(f"Error: Source image not found at {NEW_IMAGE_SOURCE}")
        return
    
    try:
        with Image.open(NEW_IMAGE_SOURCE) as img:
            rgb_img = img.convert('RGB')
            # Save as WEBP, quality 90 is usually excellent
            rgb_img.save(TARGET_IMAGE_PATH, 'WEBP', quality=90)
            
        print(f"Successfully converted and replaced: {TARGET_IMAGE_PATH}")
    except Exception as e:
        print(f"Failed to replace image: {e}")

if __name__ == "__main__":
    replace_image()
