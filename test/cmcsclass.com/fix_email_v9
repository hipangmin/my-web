#!/usr/bin/env python3
# -*- coding: utf-8 -*-
"""
Fix Email V9 - Using display:block for guaranteed tight alignment
"""

import os
import re

TARGET_DIR = r"d:\ypm\my web\test\cmcsclass.com"

# Match any existing email format
OLD_PATTERNS = [
    r'<span class="elementor-icon-list-text"[^>]*>Email:[^<]*<a[^>]*>[^<]*</a><br><span[^>]*><a[^>]*>[^<]*</a></span></span>',
    r'<span class="elementor-icon-list-text"[^>]*>Email:\s*<a[^>]*>technical@cmcsclass\.org</a><br><span[^>]*><a[^>]*>fleet@cmcsclass\.org</a></span></span>',
]

# New email structure - using display:block spans for perfect stacking
NEW_EMAIL = '''<span class="elementor-icon-list-text"><span style="display:block; line-height:1.2;">Email: <a href="mailto:technical@cmcsclass.org" style="color:inherit; text-decoration:none;">technical@cmcsclass.org</a></span><span style="display:block; line-height:1.2; padding-left:3em;"><a href="mailto:fleet@cmcsclass.org" style="color:inherit; text-decoration:none;">fleet@cmcsclass.org</a></span></span>'''

# CSS
TIGHT_CSS = '''<style id="contact-us-spacing-final">
/* V9 - Ultra Tight Email */
.elementor-element-1a327498 p,
.elementor-widget-text-editor p {
    margin-bottom: 8px !important;
    line-height: 1.3 !important;
}
.elementor-widget-icon-list .elementor-icon-list-items li.elementor-icon-list-item {
    margin-bottom: 8px !important;
}
.elementor-widget-icon-list .elementor-icon-list-items li.elementor-icon-list-item:last-child {
    margin-bottom: 0 !important;
}
.elementor-element-1a327498 .elementor-widget-container {
    margin-bottom: 0 !important;
}
</style>'''

def fix_file(filepath):
    try:
        with open(filepath, 'r', encoding='utf-8') as f:
            content = f.read()
    except:
        return False
    
    original = content
    
    for pattern in OLD_PATTERNS:
        content = re.sub(pattern, NEW_EMAIL, content, flags=re.DOTALL)
    
    old_css = r'<style id="contact-us-spacing-final">.*?</style>'
    if re.search(old_css, content, re.DOTALL):
        content = re.sub(old_css, TIGHT_CSS, content, flags=re.DOTALL)
    
    if content != original:
        with open(filepath, 'w', encoding='utf-8') as f:
            f.write(content)
        return True
    return False

def main():
    print("=" * 60)
    print("EMAIL FIX V9 - Display Block (Guaranteed Tight)")
    print("=" * 60)
    
    fixed = 0
    for root, dirs, files in os.walk(TARGET_DIR):
        dirs[:] = [d for d in dirs if d not in ['.git', 'node_modules', 'wp-json']]
        for file in files:
            if file.endswith('.html'):
                if fix_file(os.path.join(root, file)):
                    fixed += 1
                    print(f"  Fixed: {file}")
    
    print(f"\nUpdated {fixed} files")

if __name__ == "__main__":
    main()
