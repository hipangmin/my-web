#!/usr/bin/env python3
# -*- coding: utf-8 -*-
"""
Fix Email V10 - Fixed width label for perfect alignment
Using inline-block with fixed width to guarantee alignment
"""

import os
import re

TARGET_DIR = r"d:\ypm\my web\test\cmcsclass.com"

# Match existing email patterns
OLD_PATTERNS = [
    r'<span class="elementor-icon-list-text">\s*<span[^>]*>Email:[^<]*<a[^>]*>[^<]*</a></span>\s*<span[^>]*><a[^>]*>[^<]*</a></span>\s*</span>',
    r'<span class="elementor-icon-list-text"><span style="display:block[^"]*">Email:[^<]*<a[^>]*>[^<]*</a></span><span[^>]*><a[^>]*>[^<]*</a></span></span>',
]

# New email - fixed width label approach
# "Email: " is about 3.5em wide, using inline-block ensures both emails align
NEW_EMAIL = '''<span class="elementor-icon-list-text"><span style="display:inline-block; width:3.5em;">Email:</span><a href="mailto:technical@cmcsclass.org" style="color:inherit; text-decoration:none;">technical@cmcsclass.org</a><br><span style="display:inline-block; width:3.5em;"></span><a href="mailto:fleet@cmcsclass.org" style="color:inherit; text-decoration:none;">fleet@cmcsclass.org</a></span>'''

# CSS with consistent spacing
CONSISTENT_CSS = '''<style id="contact-us-spacing-final">
/* V10 - Consistent Spacing & Aligned Emails */

/* Location paragraph */
.elementor-element-1a327498 p,
.elementor-widget-text-editor p {
    margin-bottom: 10px !important;
    line-height: 1.5 !important;
}

/* List items - all same spacing */
.elementor-widget-icon-list .elementor-icon-list-items li.elementor-icon-list-item {
    margin-bottom: 10px !important;
    padding-bottom: 0 !important;
}
.elementor-widget-icon-list .elementor-icon-list-items li.elementor-icon-list-item:last-child {
    margin-bottom: 0 !important;
}

/* Email block tight line height */
.elementor-widget-icon-list .elementor-icon-list-text {
    line-height: 1.4 !important;
}

/* Text editor container */
.elementor-element-1a327498 .elementor-widget-container {
    margin-bottom: 0 !important;
}
</style>'''

def fix_file(filepath):
    try:
        with open(filepath, 'r', encoding='utf-8') as f:
            content = f.read()
    except:
        return False
    
    original = content
    
    for pattern in OLD_PATTERNS:
        content = re.sub(pattern, NEW_EMAIL, content, flags=re.DOTALL)
    
    old_css = r'<style id="contact-us-spacing-final">.*?</style>'
    if re.search(old_css, content, re.DOTALL):
        content = re.sub(old_css, CONSISTENT_CSS, content, flags=re.DOTALL)
    
    if content != original:
        with open(filepath, 'w', encoding='utf-8') as f:
            f.write(content)
        return True
    return False

def main():
    print("=" * 60)
    print("EMAIL FIX V10 - Fixed Width Label Alignment")
    print("=" * 60)
    
    fixed = 0
    for root, dirs, files in os.walk(TARGET_DIR):
        dirs[:] = [d for d in dirs if d not in ['.git', 'node_modules', 'wp-json']]
        for file in files:
            if file.endswith('.html'):
                if fix_file(os.path.join(root, file)):
                    fixed += 1
                    print(f"  Fixed: {file}")
    
    print(f"\nUpdated {fixed} files")

if __name__ == "__main__":
    main()
