#!/usr/bin/env python3
# -*- coding: utf-8 -*-
"""
Revert Image (IoT Ship)
Restores the original 'iot-ship.jpg' from the sibling directory backup to undo styling errors.
Source: .../pangminybm.com/.../iot-ship.jpg
"""

import os
import shutil

# The backup source from the sibling site
BACKUP_SOURCE = r"d:\ypm\my web\test\pangminybm.com\wp-content\uploads\2025\07\iot-ship.jpg"

# The target we kept overwriting
TARGET_DEST = r"d:\ypm\my web\test\cmcsclass.com\wp-content\uploads\2025\07\iot-ship.jpg"

def revert_image():
    if not os.path.exists(BACKUP_SOURCE):
        print(f"Error: Backup source not found at {BACKUP_SOURCE}")
        return
    
    try:
        shutil.copy2(BACKUP_SOURCE, TARGET_DEST)
        print(f"Successfully REVERTED image from backup: {TARGET_DEST}")
    except Exception as e:
        print(f"Failed to revert: {e}")

if __name__ == "__main__":
    revert_image()
